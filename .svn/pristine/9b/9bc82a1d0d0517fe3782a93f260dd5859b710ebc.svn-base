html { 
	font-size: 62.5%;
}

body { 
	background-color: #fff;
	color: #000;
	font-family: Arial, Helvetica, sans-serif;
	line-height: 1.5;
}

html, body { 
	margin: 0;
	padding: 0;
}

h3 {
	margin: 1em;
	padding: 20px 0 0 0;
	color: #7e1a70;
	font-size: 1.4em;
}

h4 {
	font-size: 1.2em;
}

table {
	width: 100%;
	margin: 1em 10em 1em 0;
	border: 1px solid #999;
	border-collapse: collapse;
}

th, td {
	border: 1px solid #999;
}

th#libelle_org {
	width:28%;	
}

th#libelle_res {
	width:9%;	
}

p.info {
	font-weight:bold;
}

