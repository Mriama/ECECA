header {
	min-height: 140px;
}
 
header h2 {
	font-size:1.5em;
}

nav#menu li{
	margin-top:0px;
}

nav#menu li a {
    display: block;
    padding: 2px;
}

nav#menu ul.election > li:first-child, nav#menu ul.admin > li:first-child {
    line-height:2em;
}

nav ul#deconnexion a {
    padding-left: 25px;
}


form input[type="text"], 
form input[type="password"], 
form input[type="number"], 
form input[type="date"], 
form input[type="url"], 
form input[type="search"], 
form input[type="email"], 
form textarea {
    width:150px;
}


div#resultat {
	overflow-x: auto;
}

table th.rotationEntete div {
	height: 5.5em;
	margin: 0;
	writing-mode: tb-rl;
	filter: flipv fliph;
}

label.displayInline {
	width: 1em;
}

form div.criteres select {
	max-width: none;
}
form input[type=submit], form input[type=button] {
	font-size: 1.2em;
}


table tr td, table tr th {
	border-bottom:1px solid #999;
}

div#chart_div { width:100%; height: 200px; }

img#aideNbSiegesImg{
	vertical-align:top;
	margin-top:5px;
}
