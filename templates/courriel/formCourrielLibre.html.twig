<form action="{{ path('ECECA_courriel_libre', { 'codeUrlTypeElect': typeElect.codeUrlById } ) }}" method="post" accept-charset="UTF-8" id="form_envoi_courriel_libre">

	<div id="form">
		{{ form_errors(form) }}
		<div id="bloc_contact_academie">{{ form_label(form['contacts_academie']) }}{{ form_widget(form['contacts_academie']) }}{{ form_widget(form['code_academie']) }}</div>
		<div id="bloc_contact_departement">{{ form_label(form['contacts_departementaux']) }}{{ form_widget(form['contacts_departementaux']) }}{{ form_widget(form['numero_departement']) }}</div>
		<div>{{ form_label(form['contacts_etablissements']) }}{{ form_widget(form['contacts_etablissements']) }}{{ form_widget(form['uai_etablissement']) }}</div>
		<div>{{ form_label(form['objet']) }}{{ form_widget(form['objet']) }}</div>
		<div>{{ form_label(form['message']) }}{{ form_widget(form['message']) }}</div>
		{{ form_rest(form) }}
	</div>

	<div class="boutons"><input type="submit" value="Envoi" title="Envoi" id="btn_envoi_courriel_libre" /></div>
</form>

<script type="text/javascript">
