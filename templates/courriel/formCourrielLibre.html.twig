	var getEtablissementByUaiOrLibelleAjaxPath = "{{ path('ECECA_ajax_getEtablissementByUaiOrLibelle') }}";
	var getTypeElect = "{{ typeElect.id }}";
	{% if app.user.profil.code != constant('App\\Entity\\RefProfil::CODE_PROFIL_DGESCO') %}
	$("#bloc_contact_academie").hide();
	{% endif %}

	{% if app.user.profil.code != constant('App\\Entity\\RefProfil::CODE_PROFIL_DGESCO') and app.user.profil.code != constant('App\\Entity\\RefProfil::CODE_PROFIL_RECT') %}
	$("#bloc_contact_departement").hide();
	{% endif %}

